<co.mobiwise.library.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressLayout"
    android:layout_width="match_parent"
    app:maxProgress="100"
    app:autoProgress="true"
    app:emptyColor="#152430"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/imageviewAction"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:background="@drawable/play"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageviewAction"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp">

        <TextView
            android:id="@+id/textviewSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="Guerilla Laments"/>

        <TextView
            android:id="@+id/textviewSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white_trans"
            android:text="Diablo Swing Orchestra"
            android:layout_below="@+id/textviewSong"
            android:layout_marginTop="4dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/textviewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white_trans"
        android:text="03:00"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"/>

</co.mobiwise.library.ProgressLayout>